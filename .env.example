# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative LLM Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
LOG_LEVEL=INFO
OUTPUT_DIR=./output
MAX_CONCURRENT_JOBS=3
DEFAULT_TIMEOUT=30000

# Browser Configuration
HEADLESS_MODE=true
BROWSER_TYPE=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Rate Limiting Configuration
CHARLESTON_REQUESTS_PER_MINUTE=30
CHARLESTON_DELAY_BETWEEN_REQUESTS=2
BERKELEY_REQUESTS_PER_MINUTE=20
BERKELEY_DELAY_BETWEEN_REQUESTS=3

# VPN Configuration (optional)
USE_VPN=false
VPN_CONFIG_PATH=./config/vpn.json

# Development Configuration
DEBUG_MODE=false
SAVE_SCREENSHOTS=true
SAVE_PAGE_SOURCE=false

# Testing Configuration
TEST_MODE=false
MOCK_LLM_RESPONSES=false
TEST_OUTPUT_DIR=./test_output
